<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trainedge.kaleidoscope.LoginActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp"
    tools:showIn="@layout/activity_login">


    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/edit_text_border"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:ems="10"
        android:hint="   Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textAlignment="textStart"
        android:textColorHint="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="67dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/edit_text_border"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textWebPassword"
        android:paddingLeft="15dp"
        android:textColorHint="#010101"
        app:layout_constraintLeft_toLeftOf="@+id/email"
        app:layout_constraintRight_toRightOf="@+id/email"
        app:layout_constraintVertical_bias="0.25"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/appSignIn"
        app:layout_constraintTop_toTopOf="@+id/email" />

    <Button
        android:id="@+id/appSignIn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="#010101"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/password"
        app:layout_constraintRight_toRightOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.501"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="67dp" />

    <CheckBox
        android:id="@+id/rememberPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me!!"
        android:textColor="#010101"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/appSignIn"
        app:layout_constraintRight_toRightOf="@+id/appSignIn"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appSignIn"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Forgot Password???"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="@+id/rememberPassword"
        app:layout_constraintRight_toRightOf="@+id/rememberPassword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Reset your Password Here"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have an Account?? Create One Here!!!"
        android:textColor="#010101"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/rememberPassword"
        app:layout_constraintRight_toRightOf="@+id/rememberPassword"
        app:layout_constraintHorizontal_bias="0.505"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/appSignUp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/appSignUp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#010101"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/textView"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/googleSignIn"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/googleSignIn"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:background="@drawable/common_google_signin_btn_text_light"
        android:padding="0dp"
        android:text="    Continue with Google"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/appSignUp"
        app:layout_constraintRight_toRightOf="@+id/appSignUp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/facebook_login_button" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="234dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/googleSignIn"
        app:layout_constraintRight_toRightOf="@+id/googleSignIn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38dp" />


</android.support.constraint.ConstraintLayout>
